generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Feedback {
  id        String   @id @default(uuid())
  name      String
  email     String
  message   String
  rating    Int
  createdAt DateTime @default(now())
  status    String   @default("pending") // pending, reviewed, responded
}
